# OpenAI API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Your OpenAI API key (required)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-

# =====================================================================
# AUTHENTICATION SETTINGS
# =====================================================================

# Enable/disable authentication (default: true)
# Set to "false" for local development without login
AUTH_ENABLED=true

# Session timeout in minutes (default: 30)
# Users will be logged out after this period of inactivity
SESSION_TIMEOUT_MINUTES=30

# Initial admin password (optional)
# If not set, a random password will be generated and shown in console
# INITIAL_ADMIN_PASSWORD=YourSecurePassword123!

# =====================================================================
# LEGACY SETTINGS (deprecated - use new auth system instead)
# =====================================================================

# Application Password (deprecated - use AUTH_ENABLED and user accounts instead)
# APP_PASSWORD=your password

# =====================================================================
# OPTIONAL SETTINGS
# =====================================================================

# Optional: Set usage limits to prevent unexpected costs
# OPENAI_MAX_TOKENS=100000
# OPENAI_MAX_REQUESTS_PER_MINUTE=60

# Optional: Privacy settings
# Set to "false" to exclude location data from OpenAI requests
# INCLUDE_LOCATION_IN_GPT=true

# Optional: Maximum assets per run (default: 1000)
# MAX_ASSETS_PER_RUN=1000
