{
    "name": "fa-cs-automator",
    "version": "1.0.0",
    "main": "electron/main.js",
    "scripts": {
        "dev:server": "vite",
        "dev:electron": "wait-on tcp:5173 && electron .",
        "dev:backend": "venv\\Scripts\\python backend/api.py",
        "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:electron\" \"npm run dev:backend\"",
        "start": "electron .",
        "dist": "vite build && electron-builder",
        "build:backend": "cd backend && pyinstaller fa_cs_automator.spec --noconfirm",
        "build:all": "npm run build:backend && npm run dist"
    },
    "build": {
        "appId": "com.facs.automator",
        "productName": "FA CS Automator",
        "copyright": "Copyright Â© 2025",
        "asar": true,
        "asarUnpack": [],
        "directories": {
            "output": "release"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64"]
                },
                {
                    "target": "portable",
                    "arch": ["x64"]
                }
            ],
            "publisherName": "Your Company Name"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "!**/*.map",
            "!**/node_modules/**/*.md",
            "!**/node_modules/**/*.ts"
        ],
        "extraResources": [
            {
                "from": "backend/dist/api.exe",
                "to": "backend_dist/api.exe"
            }
        ]
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^5.1.1",
        "autoprefixer": "^10.4.22",
        "concurrently": "^9.2.1",
        "electron": "^39.2.4",
        "electron-builder": "^26.0.12",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "vite": "^7.2.4",
        "wait-on": "^9.0.3"
    },
    "dependencies": {
        "@radix-ui/react-tooltip": "^1.2.8",
        "axios": "^1.13.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.555.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.9.6",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7"
    }
}
