{
    "name": "fa-cs-automator",
    "version": "1.0.0",
    "main": "electron/main.js",
    "scripts": {
        "dev:server": "vite",
        "dev:electron": "wait-on tcp:5173 && electron .",
        "dev:backend": "venv\\Scripts\\python backend/api.py",
        "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:electron\" \"npm run dev:backend\"",
        "start": "electron .",
        "dist": "vite build && electron-builder"
    },
    "build": {
        "appId": "com.facs.automator",
        "win": {
            "target": "portable",
            "icon": "icon.ico"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "extraResources": [
            {
                "from": "backend/dist/api.exe",
                "to": "backend_dist/api.exe"
            }
        ]
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^5.1.1",
        "autoprefixer": "^10.4.22",
        "concurrently": "^9.2.1",
        "electron": "^39.2.4",
        "electron-builder": "^26.0.12",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "vite": "^7.2.4",
        "wait-on": "^9.0.3"
    },
    "dependencies": {
        "@radix-ui/react-tooltip": "^1.2.8",
        "axios": "^1.13.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.555.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.9.6",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7"
    }
}
